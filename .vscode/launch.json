 {
  "scripts": {
    "watch": "npx vite build --watch",                 // rebuilds dist on changes
    "electron:file": "cross-env USE_FILE=1 electron .",// loads dist/index.html
    "dev:file": "concurrently \"npm:watch\" \"npm:electron:file\"",

    "build": "npx vite build",
    "dist": "npx vite build && electron-builder --win"
  },
  "configurations": [
  {
    "command": "npm start",
    "name": "Run npm start",
    "request": "launch",
    "type": "node-terminal"
  }
  ]
}
